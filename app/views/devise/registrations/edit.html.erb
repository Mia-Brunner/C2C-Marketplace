<div class="user-edit-page">
  <div class="editleft">
  </div>
  
 <div class="editright">
 <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <br>
  <div class="moverightplease">
  <div class="form-group row">
  </div>
  </div>
  <br>
  <br>
  <div class="form-group row">
    <%= f.label :email, class: 'col-sm-3 col-form-label' %>
    <div class="col-sm-9">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>
  
  <div class="form-group row">
    <%= f.label :new_password, class: 'col-sm-3 col-form-label'%>
    <div class="col-sm-9">
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: "Leave blank if you don't want to change it."%>
    <% if @minimum_password_length %>
    <% end %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :password_confirmation, class: 'col-sm-3 col-form-label'%><br />
    <div class="col-sm-9">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'%>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :current_password, class: 'col-sm-3 col-form-label'%>
    <div class="col-sm-9">
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
    </div>
  </div>
  <div class="col-sm-3"></div>
    <div class="editsubmit">
    <%= f.submit "Update", class: 'submitedit' %>
  </div>

<hr>

 
<% end %>


<p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "canceledit" %></p>
  </div>
</div>





